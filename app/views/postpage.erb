<h1> <%=@post.title%> </h1>
<p> <%=@post.content%> </p>

<form name= 'commentbox' action= "/comment/create" method= "post">

  <textarea cols=60 rows=12 placeholder='Post Comment (Be nice)' name='content'></textarea>
  <input type=hidden name="post_id" value="<%=@post.id%>">
  <br>
  <input type=submit value="submit"/>
</form>

<h4> Comments: </h4>

<% @comments.each do |comment| %>
  <% user = User.find_by_id(comment.user_id)%>
  <h5><%=user.username%></h5>
  <p><%=comment.content%></p>
<% end %>

